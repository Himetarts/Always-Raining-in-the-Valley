        ** Sets up House 2's door warp - Outside
        *********/
        {
            "Action": "EditMap",
            "Target": "Maps/Custom_EastScarpe",
            "MapTiles":
            [
                {
                    "Position":
                    {
                        "X":31 ,
                        "Y":50
                    },

                    "Layer": "Buildings",
                    "SetProperties":
                    {
                        "Action": "Warp 13 25 Custom_ARVHouse"
                    }
                }
            ],
                "When": { "HasMod: |contains=LemurKat.EastScarpe.CP": true },
        },

